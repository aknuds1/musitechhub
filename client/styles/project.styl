@require 'common.import'

margin = 25px

subtle-shadow()
  box-shadow 2px 2px 13px 1px #0D0D0D

#project-pad
  pad-base()

  box-sizing border-box
  display inline-block
  width 720px
  padding 20px
  margin margin
  margin-bottom 60px

  :first-child
    margin-top 0

  .ace_editor
    width: auto
    height: 500px

#project-contents
  rounded-corners()
  subtle-shadow()

  border-style solid
  border-width 1px
  padding 0

#tab-contents
  padding 20px

  :first-child
    margin-top 0
    margin-bottom 0

#right-column
  box-sizing border-box
  display inline-block
  vertical-align top
  width 370px
  margin-top margin
  margin-bottom margin
  margin-right margin

#tag-pad
  pad-base()
  padding-bottom 20px

#edit-buttons
  margin-top 20px

#project-title
  margin-top 0
  margin-bottom 0

#project-creation-date
  margin-top 4px

#title-input
  margin-bottom 16px

#project-path
  margin-bottom 0
  margin-top 20px
  padding-left 20px
  text-shadow 3px 3px 10px #1F1F1F

#image-box
  width 620px
  margin-left auto
  margin-right auto
  margin-bottom 30px

#displayed-image
  rounded-corners()
  overflow hidden
  width 500px
  height 409px
  display inline-block
  subtle-shadow()

  img
    width 100%

#thumbnails
  display inline-block
  margin-right 14px
  vertical-align top

.thumbnail-wrapper
  rounded-corners()
  overflow hidden
  width 100px
  subtle-shadow()

  img
    width 100%

cell-padding = 8px

#project-files-table
  width 100%
  text-align left

  thead
    border-bottom 1px solid #811E79
    padding 4px 0

    th
      padding cell-padding

  tbody
    tr
      border-bottom 1px solid #811E79

      td
        padding cell-padding
