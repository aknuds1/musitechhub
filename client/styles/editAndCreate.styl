@require 'common.import'

editor()
  margin-top 16px
  h2
    margin-top 0
    margin-bottom 8px
    font-size 1.4em

  .remove-all
    cursor pointer
    color #e0e0e0

#description-editor
  editor()

  .wmd-input
    height 200px

#instructions-editor
  editor()

  height 300px

#pictures-editor
  editor()

#files-editor
  editor()

.wmd-button-bar
  rounded-corners-top()

  width 100%
  background-color transparent
  border 1px solid rgb(204, 204, 204)
  box-sizing border-box
  margin 0 0 0 0
  padding 0 12px

.wmd-input
  rounded-corners-bottom()

  height 100px
  width 100%
  background-color white
  border 1px solid rgb(204, 204, 204)
  padding 10px
  resize none
  box-sizing border-box

  &:focus
    outline 0
    border 1px solid #07c

.wmd-preview
  margin-top 28px
  margin-bottom 28px
  padding 10px 0
  border-top 1px dotted #ccc
  border-bottom 1px dotted #ccc

  p
    margin 0
    margin-bottom 1em

  hr
    background-color #ddd
    color #ddd
    border 0
    height 1px

  blockquote
    margin-bottom 10px
    padding 10px
    background-color #fff9e3
    border-left 2px solid #ffeb8e

    p:last-child
      margin-bottom: 0

.wmd-button-row
  position relative
  padding 0
  margin 0
  height 36px

.wmd-spacer
  width 1px
  height 100%
  margin-left 14px

.wmd-button
  width 20px
  height 20px
  padding-left 2px
  padding-right 3px
  cursor default
  color grey

  &.enabled
    color black
    cursor pointer

    &:hover
      color #0a83dc

.wmd-prompt-background
  background-color Black

.wmd-prompt-dialog
  border 1px solid #999999
  background-color #F5F5F5

.wmd-prompt-dialog > div
  font-size 0.8em
  font-family arial, helvetica, sans-serif

.wmd-prompt-dialog > form > input[type="text"]
  border 1px solid #999999
  color black

.wmd-prompt-dialog > form > input[type="button"]
  border 1px solid #888888
  font-family trebuchet MS, helvetica, sans-serif
  font-size 0.8em
  font-weight bold
