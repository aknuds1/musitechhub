@import 'common.import'

radius = 4px

#explore-pad
  pad-base()

  margin 25px
  margin-bottom 0

#isotope-container
  padding-top 20px
  padding-bottom 20px

.project-item
  rounded-corners()

  box-sizing border-box
  padding 0
  border-style solid
  border-width 1px
  width 218px
  height 218px
  margin 10px
  box-shadow 2px 2px 13px 1px #1D1C1C
  border-color rgba(0, 0, 0, 0.54)

  a
    text-decoration none

.project-item-header
  padding 8px
  background-color black
  color #E2E2E2

.project-item-title
  font-size 14px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.project-item-author
  font-size 12px
  color #AFAFAF

.project-item-image
  width 216px
  height 170px
