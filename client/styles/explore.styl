@import 'common.import'

radius = 4px

#explore-pad
  pad-base()

  margin 25px

#isotope-container
  padding-top 20px
  padding-bottom 20px

.project-item
  rounded-corners()

  box-sizing border-box
  padding 0
  border-style solid
  border-width 1px
  width 218px
  height 218px
  margin 10px
  box-shadow 2px 2px 13px 1px #1D1C1C
  color #FF14F6
  border-color rgba(255, 20, 246, 0.54)

.project-item-header
  padding 8px
  background-color black
  border-radius radius radius 0 0

.project-item-title
  font-size 14px

.project-item-author
  font-size 12px
  color #A88AA8

.project-item-image
  border-radius 0 0 radius radius
