menu-background = #272F32
border-radius = 4px
menu-color = #E2E2E2
content-background = #FBFBFB
body-background = #F3F3F3
blue-color = #0A83DC
muted = #737373

rounded-corners()
  border-radius border-radius

rounded-corners-top()
  border-radius border-radius border-radius 0px 0px

rounded-corners-bottom()
  border-radius 0px 0px border-radius border-radius

pad-base()
  rounded-corners()
  box-sizing border-box
  background content-background
  border 1px solid #8C8C8C
  box-shadow 2px 2px 13px 1px #2C2C2C

edit-and-create-common()
  padding 20px
  margin 25px
  margin-bottom 0

  &>:first-child
    margin-top 0

  input, select
    box-sizing border-box
    width 300px

ellipsis-overflow
  overflow hidden
  text-overflow ellipsis
