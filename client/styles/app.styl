@import 'common.import'

menu-color = #FF14F6
padding-horizontal = 3em
padding-vertical = 1em
padding-top = 20px
grey-background = #E3E6E7
border-color = #811E79
action-color = #C71CC0
action-hover-color = #F511EB
lighter-background = #2D363A

body
  background-color lighter-background
  color menu-color

a
  color #70FD12
  &:focus
    outline none

.content
  border-radius 10px
  margin-top 36px
  padding-left 0px
  padding-right 0px

#menu
  border-bottom 0px
  background-color menu-background
  .pure-menu-heading
    color menu-color
    margin-top 0.2em
    a
      color menu-color
      padding 0
      border-width 0

  a
    color menu-color
    &:focus
      background-color: menu-background
    &:hover
      background-color rgb(51, 51, 51)

  li
    &.pure-menu-selected
      a
        background-color #111111
        -webkit-box-shadow inset 0 3px 8px rgba(0, 0, 0, 0.125)
        -moz-box-shadow inset 0 3px 8px rgba(0, 0, 0, 0.125)
        box-shadow inset 0 3px 8px rgba(0, 0, 0, 0.125)
        color menu-color

footer
  //margin-top 5em
  margin-top 0px
  border-top 1px solid border-color
  padding 1em
  text-align center
  font-size 80%

.accountbar
  padding-left 20px
  padding-right 30px

  .toolbar-btn
    display inline-block
    padding-left 6px
    padding-right 6px
    color action-hover-color
    &.enabled:hover
      color action-hover-color
    &.enabled:active
      -webkit-box-shadow inset 0 3px 8px rgba(0, 0, 0, 0.125)
      -moz-box-shadow inset 0 3px 8px rgba(0, 0, 0, 0.125)
      box-shadow inset 0 3px 8px rgba(0, 0, 0, 0.125)
      background-color #111111
    &.disabled
      color #5F2D5D
      cursor default

.upper
  text-transform uppercase

.small
  font-size 11px

.border-btm
  border-bottom 1px solid border-color

.light-padding
  padding 7px

.airy-padding-sides
  padding-left 20px
  padding-right 20px

.lighter-background
  background-color lighter-background

.file-explorer
  padding-left 0px
  .menu-item
    display block
    margin-bottom 3px
    cursor pointer
    padding-left 40px
    &.selected
      background-color #3E4A50

.contextmenu
  padding-top 5px
  padding-bottom 5px
  padding-left 23px
  padding-right 23px
  background-color menu-background

  ul
    padding 0
    margin 0
  .contextmenu-item
    display block
    cursor pointer
    color action-color
    &:hover
      color action-hover-color

.pull-right
  float right

.pure-form
  legend
    display none

.pure-button-primary
  rounded-corners()

  color action-color
  background-color #050606

  &:hover
    background-image linear-gradient(transparent, rgba(255,255,255,.05) 40%, rgba(255,255,255,.1))
  &:active
    box-shadow 0 0 0 1px rgba(255,255,255,.15) inset,0 0 6px rgba(255,255,255,.2) inset

.tabs
  display inline-block
  .tab
    &.active
      background-color lighter-background
    padding 10px
    rounded-corners-top()
    display inline-block
    cursor pointer
