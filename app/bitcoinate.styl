.bitcoinate
  background-image: linear-gradient(rgb(247, 147, 26), rgb(193, 108, 7))
  font: 900 12px/18px Arial, sans-serif
  color: rgb(255,255,255)
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5)
  border: 1px solid rgb(193, 108, 7)
  margin: 0
  cursor: pointer
  &:hover,
  &:focus
    background-image: linear-gradient(rgb(248, 158, 52), rgb(232, 130, 8))
  span.bitcoinate-image
    background-repeat: no-repeat
    display: inline-block
    vertical-align: middle
    position: relative
    margin: 0 4px 0 0

.bitcoinate[data-size="20"]
  padding: 0 3px
  border-radius: 2px
  &:active
    box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.5)
  span.bitcoinate-image
    background-image: url('assets/images/bitcoinate20.png')
    width: 10px
    height: 14px
    bottom: 2px
