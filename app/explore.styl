@require '_common'
@require '_searchbox'

#explore-pad
  pad-base()

  margin 25px
  margin-bottom 0

  .search-box
    search-box()

    margin-top 20px

    .search-icon
      top 6px
      left 20px

    #explore-search-input
      border 1px solid #000
      box-shadow 2px 2px 6px 0px #C1C1C1
      padding-left 28px
      padding-right 28px
      margin-left 11px
      box-sizing border-box
      width 500px

      &:focus
        outline: none

    .clear-icon
      top 6px
      right 575px
