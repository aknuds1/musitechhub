@require './_common'
@require './_tabs'

pad-margin = 56px

.required
  white-space nowrap

  input
    display inline-block!important

  &::after
    content " *"
    vertical-align middle
    color red

.form-error-message
  display: block
  font-size: 9px

.login-pad
  pad-base()

  margin-top 56px
  margin-left 56px
  margin-right 56px

  #userhint
    padding-bottom 24px

    .required-asterisk
      color red

  form
    rounded-corners-bottom()

    background-color content-background
    padding-top 43px
    padding-bottom 43px
    padding-left 120px
    padding-right 120px

    fieldset
      padding 0
      input
        margin-bottom 10px
        width 100%
        display block

  .button-group
    margin-top 20px
    text-align right

  .login-header
    rounded-corners-top()

    background-color menu-background
    color white
    padding-top 0
    padding-sides = 14px
    padding-left padding-sides
    padding-right padding-sides
    padding = 10px

    display flex

    .tabs
      tabs-base()

      border 0
      padding-top padding

    .tab
      padding padding

    .login-prompt
      padding padding
      margin-right auto
      display inline-block

#forgot-password
  margin-left 4px

#password-reset-page
  margin pad-margin
