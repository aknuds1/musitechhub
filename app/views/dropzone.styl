@require '_common'

.dropzone
  rounded-corners()

  position relative
  box-sizing border-box
  background-color menu-background
  border 0

  .dz-preview.dz-image-preview
    background-color menu-background

  *
    box-sizing border-box

  .dz-preview
    position relative
    display inline-block
    width 120px
    margin 0.5em

    .dz-progress
      display block
      height 15px
      border 1px solid #aaa

      .dz-upload
        display block
        height 100%
        width 0
        background green

    .dz-error-message
      color red
      display none

    .dz-error-mark, .dz-success-mark
      position absolute
      display none
      left 30px
      top 30px
      width 54px
      height 58px
      left 50%
      margin-left -(54px/2)

    &.dz-error
      .dz-error-message, .dz-error-mark
        display block

    &.dz-success
      .dz-success-mark
        display block

.dz-remove
  color #E0E0E0

.dz-message
  color white
