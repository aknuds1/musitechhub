@require '_common'
@require '_searchbox'

#explore-pad
  pad-base()
  airy-padding-sides()

  margin 25px
  margin-bottom 0

  .search-box
    search-box()

    margin-top 20px

    .search-icon
      top 6px
      left 20px

    #explore-search-input
      border 1px solid #000
      box-shadow 2px 2px 6px 0px #C1C1C1
      padding-left 28px
      padding-right 28px
      margin-left 11px
      box-sizing border-box
      width 500px

      &:focus
        outline: none

    .clear-icon
      top 6px
      right 575px

  #isotope-container
    padding-top 20px
    padding-bottom 20px

  .project-item
    rounded-corners()

    box-sizing border-box
    padding 0
    border 0
    width 218px
    height 218px
    margin 10px
    box-shadow 2px 2px 13px 1px #1D1C1C

    a
      text-decoration none

  .project-item-header
    padding 8px
    background-color black
    color #E2E2E2
    border-radius 4px 4px 0 0

  .project-item-title
    font-size 14px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  .project-item-author
    font-size 12px
    color #AFAFAF

  .project-item-image
    width 218px
    height 172px
    border-radius 0 0 4px 4px
