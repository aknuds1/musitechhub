@require '_common'

border-color = #C1C1C1

.modal-header
  border-bottom 1px solid border-color
  box-sizing border-box

  .modal-header-content
    display flex
    padding 15px

  h3
    margin 0

  .close
    margin-left auto

.modal-body
  .modal-body-content
    padding 15px

  .button-group
    border-top 1px solid border-color
    padding 15px

button.close
  border 0
  background 0 0
  padding 0
  color muted

  &:hover
    color black

  &:active,&:focus
    outline none
