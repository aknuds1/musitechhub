menu-background = #272F32
border-radius = 4px
menu-color = #E2E2E2
content-background = #FBFBFB
body-background = #F3F3F3
blue-color = #0A83DC
muted = #737373
code-background-color = #eee

// Screen dimensions from PureCSS
// >= 568px
screen-sm = 35.5em
// >= 768px
screen-md = 48em
// >= 1024px
screen-lg = 64em
// >= 1280px
screen-xl = 80em

rounded-corners()
  border-radius border-radius

rounded-corners-top()
  border-radius border-radius border-radius 0px 0px

rounded-corners-bottom()
  border-radius 0px 0px border-radius border-radius

airy-padding-sides()
  padding-left 20px
  padding-right 20px

pad-base()
  rounded-corners()

  // Ensure that child margins don't collapse within borderless elements
  overflow auto
  box-sizing border-box
  background content-background
  border 0
  box-shadow 2px 2px 13px 1px #4C4C4C

edit-and-create-common()
  padding 20px
  margin 25px
  margin-bottom 0

  &>:first-child
    margin-top 0

  input, select
    box-sizing border-box
    width 300px

ellipsis-overflow()
  overflow hidden
  text-overflow ellipsis

rendered-markdown()
  img
    max-width 100%

  p
    margin 0
    margin-bottom 1em

  code
    font-size 14px
    background-color code-background-color

  p
    code
      padding: 1px 5px 1px 5px

  hr
    background-color #ddd
    color #ddd
    border 0
    height 1px

  blockquote
    margin-bottom 10px
    padding 10px
    background-color #fff9e3
    border-left 2px solid #ffeb8e

    p:last-child
      margin-bottom: 0

  pre
    word-wrap normal
    overflow auto
    padding 5px
    width auto
    max-height 600px
    background-color code-background-color
    margin-bottom 1em
