#project-top-pad.airy-padding-sides
  .input-group
    input#id-input(placeholder="Project ID" value="#{id}")
  .input-group
    input#title-input(placeholder="Project title" value="#{title}")
  .input-group
    input#tags-input(placeholder="Project tags" value="#{tagsString}")
    span.icon-tags2
  #description-editor
    +createDescription
  #pictures-editor
    +createPictures
  #instructions-editor
    +createInstructions
  #files-editor
    +createFiles
  #create-buttons.button-group
    button#create-project.pure-button.pure-button-primary Create
    button#cancel-create.pure-button Cancel
