.modal.fade#add-existing-plan-modal(tabindex="-1", role="dialog", aria-labelledby="modal-label"
    aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        a#close-modal(href='#' data-dismiss='modal', aria-hidden='true') &times;
        h4#modal-label.modal-title Add Existing Trello Board
      .modal-body
        form.pure-form.pure-form-stacked
          fieldset
            select#add-existing-board-select.modal-default.modal-select(name="boardId", autofocus="true")
              option(value='', disabled, selected) Choose a Trello board
              each existingBoards
                option(value=id) #{name}
      .modal-footer
        button.pure-button.pure-button-primary(type="button", data-modal="ok") OK
        button.pure-button(type="button", data-modal="cancel") Cancel
