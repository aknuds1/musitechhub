.modal.fade#questionModal(tabindex="-1", role="dialog", aria-labelledby="questionModalLabel"
    aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h4#questionModalLabel.modal-title #{title}
      .modal-body
        p #{message}
      .modal-footer
        button.btn.btn-default.btn-primary(type="button", data-modal="yes") Yes
        button.btn.btn-default.btn-primary(type="button", data-modal="no") No
